pipeline {
    agent any
    stages {
        stage('flyway') {
            environment {
               flywayHome = tool 'flyway'
            }
            steps {
                sh "${flywayHome}/flyway -configFiles=${env.WORKSPACE}/conf/flyway.conf -locations=filesystem:${env.WORKSPACE}/sql -url=jdbc:postgresql://pg:5432/scm -user=scm -password=scm migrate"
            }
        }
    }
}